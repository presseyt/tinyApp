
<div style="height:80px; background-color:silver;">
  <div style="display: inline-block; vertical-align: middle;">
    <h1 style="font-family: 'Montserrat', sans-serif;"><a style="color:black; text-decoration: none;" href="/">Tiny App</a></h1>
  </div>
  <div style="float:right; margin-top: 5px; margin-right: 5px; text-align: right">
    <% if (!user){ %>
      <a href="/login">Login</a> <br>
      <a href="/register">Register</a>
    <% } else { %>
      Current User: <%=user.email%> <br>
      <form method="POST" action="/logout">
        <input type="submit" value="Logout" style="margin-top: 5px">
      </form>
    <% } %>
  </div>
</div>

<div style="clear:both;"> &nbsp </div>